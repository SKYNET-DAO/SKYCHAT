<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

<androidx.viewpager.widget.ViewPager

    android:id="@+id/gui_vp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />



    <TextView
        android:id="@+id/tv_guide_skip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:clickable="true"
        android:padding="@dimen/dp4"
        android:text="Skip >"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp16"/>

    <Button
        android:id="@+id/btn_guide_enter"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/selector_btn_test"
        android:padding="@dimen/dp8"
        android:text="@string/str_start"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp16"
        android:visibility="gone"
        tools:visibility="visible"/>



    <cn.wildfire.imshat.kit.widget.indicator.CustomIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        app:pointInterval="@dimen/dp20"
        />


</RelativeLayout>